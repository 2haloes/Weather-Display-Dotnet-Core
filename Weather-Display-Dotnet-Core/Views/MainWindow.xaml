        <RowDefinition Height="Auto"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
      </Grid.RowDefinitions>
      <Button Command="{Binding LoadSettingsWindow}" Background="SkyBlue" Height="88">
        <TextBlock Text="{Binding CurrentTime}" Grid.Row="0" FontSize="64" FontWeight="Bold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
      </Button>
      
      <Image Source="{Binding WeatherData.currently.iconBitmap, FallbackValue=DefaultIcon}" Grid.Row="1" Height="148" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
      <TextBlock Text="{Binding WeatherData.currently.icon, FallbackValue=Wind}" Grid.Row="2" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding WeatherData.currently.temperatureDisplay, FallbackValue=00.0°C}" Grid.Row="3" FontSize="84" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding WeatherData.currently.summary, FallbackValue=It's sunny somewhere in the world [No loaded data]}" Grid.Row="4" Width="296" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" />
      <Button Grid.Row="5" Width="256" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Background="SkyBlue">Powered by DarkSky</Button>
