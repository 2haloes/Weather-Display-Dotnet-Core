<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Weather_Display_Dotnet_Core.ViewModels;assembly=Weather_Display_Dotnet_Core"
        xmlns:vb="clr-namespace:Avalonia.Controls.ViewBox;assembly=Avalonia.Controls.ViewBox"
        Icon="resm:Weather_Display_Dotnet_Core.Assets.avalonia-logo.ico"
        Title="Weather_Display_Dotnet_Core"
        MinHeight="480"
        MinWidth="800"
        MaxHeight="480"
        MaxWidth="800"
        Background="SkyBlue">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Grid>
        <TextBlock Text="{Binding CurrentTime}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

  </Grid>

</Window>